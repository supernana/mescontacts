{% extends "layout.html.twig" %}

{% block title %}Home{% endblock %}

{% block content %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        {% for contact in contacts %}
            <contact>
                <h2><a class="contactNom" href="{{ path('contact', { 'id': contact.id }) }}">{{ contact.nom }} {{ contact.prenom }}</a></h2>
                <p>{{ contact.email }}</p>
            </contact>
        {% endfor %}
    {% else %}
        <a href="{{ path('login') }}">Connexion</a>
    {% endif %}
{% endblock %}